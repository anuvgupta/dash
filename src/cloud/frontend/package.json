{
    "name": "dash-cloud-frontend",
    "version": "1.0.0",
    "description": "Dash cloud website frontend",
    "author": "Anuv Gupta",
    "license": "ISC",
    "config": {
        "root": "../../..",
        "src": "../../../src/cloud/frontend",
        "dist": "../../../dist/cloud/frontend"
    },
    "scripts": {
        "clean": "rm -rf $npm_package_config_dist/*",
        "prebuild": "npm run clean",
        "build": "npm run build-source && npm run build-config && npm run build-assets",
        "build-source": "mkdir -p $npm_package_config_dist/src && cp -R $npm_package_config_src/src/* $npm_package_config_dist/src/",
        "build-config": "mkdir -p $npm_package_config_dist/config && cp -R $npm_package_config_src/config/* $npm_package_config_dist/config/",
        "build-assets": "mkdir -p $npm_package_config_dist/assets && cp -R $npm_package_config_src/assets/* $npm_package_config_dist/assets/",
        "start": "exit 0",
        "test": "echo \"Error: no test specified\" && exit 1"
    }
}