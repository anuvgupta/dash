{
    "compilerOptions": {
        "target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "../../../dist",
        "rootDir": "../../",
        "baseUrl": "./src",
        "paths": {
            "@dash/*": [
                "./*"
            ],
            "@test/*": [
                "../tst/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.ts"
    ]
}