{
    "name": "dash-cloud-backend",
    "version": "1.0.0",
    "description": "Dash cloud website backend",
    "main": "../../../dist/cloud/backend/src/Main.js",
    "author": "Anuv Gupta",
    "license": "ISC",
    "config": {
        "root": "../../..",
        "src": "../../../src/cloud/backend",
        "dist": "../../../dist/cloud/backend"
    },
    "scripts": {
        "clean": "rm -rf $npm_package_config_dist/*",
        "prebuild": "npm run clean",
        "build": "npm run build-source && npm run build-config && npm run build-assets",
        "build-source": "npm run build-typescript && npm run build-modules",
        "build-typescript": "tslint -c tslint.json -p tsconfig.json --fix && tsc",
        "build-modules": "mkdir -p $npm_package_config_dist/node_modules && cp -R $npm_package_config_src/node_modules/* $npm_package_config_dist/node_modules/",
        "build-config": "mkdir -p $npm_package_config_dist/config && cp -R $npm_package_config_src/config/* $npm_package_config_dist/config/",
        "build-assets": "mkdir -p $npm_package_config_dist/assets && cp -R $npm_package_config_src/assets/* $npm_package_config_dist/assets/",
        "start": "node .",
        "test": "npx jest",
        "test-coverage": "npx jest --coverage",
        "test-verbose": "npx jest --silent=false"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.3",
        "@types/node": "^18.15.11",
        "@types/ws": "^8.5.6",
        "jest": "^29.5.0",
        "npx": "^10.2.2",
        "ts-jest": "^29.1.0",
        "tsconfig-paths": "^4.2.0",
        "tslint": "^6.1.3",
        "typescript": "^5.0.3"
    },
    "dependencies": {
        "ansi_up": "^6.0.2",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "express-jwt": "^8.4.1",
        "jsonwebtoken": "^9.0.0",
        "mongodb": "^5.3.0",
        "ws": "^8.14.2"
    }
}
