{
    "name": "dash-daemon",
    "version": "1.0.0",
    "description": "Dash daemon resource client",
    "main": "../../dist/daemon/src/Main.js",
    "author": "Anuv Gupta",
    "license": "ISC",
    "config": {
        "root": "../..",
        "src": "../../src/daemon",
        "dist": "../../dist/daemon"
    },
    "scripts": {
        "clean": "rm -rf $npm_package_config_dist/*",
        "prebuild": "npm run clean && tslint -c tslint.json -p tsconfig.json --fix",
        "build": "npm run build-source && npm run build-config && npm run build-assets",
        "build-source": "tsc",
        "build-config": "mkdir -p $npm_package_config_dist/config && cp -R $npm_package_config_src/config/* $npm_package_config_dist/config/",
        "build-assets": "mkdir -p $npm_package_config_dist/assets && cp -R $npm_package_config_src/assets/* $npm_package_config_dist/assets/",
        "prestart": "npm run build",
        "start": "node .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "@types/node": "^18.15.11",
        "tslint": "^6.1.3",
        "typescript": "^5.0.3"
    }
}
