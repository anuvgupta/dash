{
    "name": "dash-daemon",
    "version": "1.0.0",
    "description": "Dash daemon resource client",
    "main": "../../../dist/app/daemon/Main.js",
    "author": "Anuv Gupta",
    "license": "ISC",
    "config": {
        "root": "../../..",
        "src": "../../../src",
        "dist": "../../../dist"
    },
    "scripts": {
        "clean": "rm -rf $npm_package_config_dist/app/daemon $npm_package_config_dist/config/daemon",
        "prebuild": "npm run clean && tslint -c tslint.json -p tsconfig.json --fix",
        "build": "npm run build-config && npm run build-static && tsc",
        "build-config": "mkdir -p $npm_package_config_dist/config/daemon && cp -R $npm_package_config_src/config/daemon/* $npm_package_config_dist/config/daemon/",
        "build-static": "exit 0",
        "prestart": "npm run build",
        "start": "node .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "tslint": "^6.1.3",
        "typescript": "^5.0.3"
    }
}
